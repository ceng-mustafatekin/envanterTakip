@model envanterTakip.user

@{
   
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">

    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js" rel="stylesheet"></script>
    <script src="~/Scripts/jquery.validate.js" rel="stylesheet"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js" rel="stylesheet"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js" rel="stylesheet"></script>
    <title>Login Sayfası Index</title>
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Envanter Takip Sistemi", "Index", "Auth", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>
</body>
</html>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container">

    <h4>Panel Giriş Sayfası</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row offset-md-3" style="margin-top:5%">
        <div class="form-group col-lg-7">
            @Html.LabelFor(model => model.user_userName, "Kullanıcı adı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.user_userName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.user_userName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-lg-7">
            @Html.LabelFor(model => model.userPassword, "Şifre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.userPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.userPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row offset-md-3">
            <div class="form-group col-lg-7">
                <input type="submit" value="Giriş" class="btn btn-block btn-success" />
            </div>
        </div>

        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - envanter@@gazi.edu.tr </p>
        </footer>
    </div>


   


</div>
}



